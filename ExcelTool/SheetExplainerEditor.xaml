<Window x:Class="ExcelTool.SheetExplainerEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelTool"
        mc:Ignorable="d"
        Title="检索信息编辑器" Name="w_SheetExplainerEditor" Height="450" Width="800" MinHeight="430" MinWidth="500" Closing="WindowClosing" Loaded="WindowLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ComboBox Name="cb_sheetexplainers" Grid.Row="0" Margin="10 2" Width="300" VerticalContentAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.ColumnSpan="3" SelectionChanged="CbSheetExplainersSelectionChanged" PreviewMouseLeftButtonDown="CbSheetExplainersPreviewMouseLeftButtonDown"/>
            <Button Name="btn_delete" Content="删除" IsEnabled="False" Height="25" Width="50" Grid.Row="0" Grid.ColumnSpan="3" Margin="10 2" HorizontalAlignment="Right" Click="BtnDeleteClick"/>
            
            <Label Grid.Row="1" Grid.Column="0" Content="相对路径列表 (可空)" Margin="10 2"/>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="tb_relativepaths" Grid.Row="3" Grid.Column="0" Margin="10 2"/>

            <Label Grid.Row="1" Grid.Column="1" Content="文件名信息列表" Margin="10 2"/>
            <ComboBox Name="cb_filenamestype" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="10 2">
                <ComboBoxItem Content="一致"/>
                <ComboBoxItem Content="包含"/>
                <ComboBoxItem Content="正则表达式"/>
            </ComboBox>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="tb_filenames" Grid.Row="3" Grid.Column="1" Margin="10 2"/>

            <Label Grid.Row="1" Grid.Column="2" Content="Sheet名信息列表" Margin="10 2"/>
            <ComboBox Name="cb_sheetnamestype" VerticalContentAlignment="Center" Grid.Row="2" Grid.Column="2" Margin="10 2">
                <ComboBoxItem Content="一致"/>
                <ComboBoxItem Content="包含"/>
                <ComboBoxItem Content="正则表达式"/>
            </ComboBox>
            <TextBox AcceptsReturn="True" TextWrapping="Wrap" Name="tb_sheetnames" Grid.Row="3" Grid.Column="2" Margin="10 2"/>
        </Grid>
        <Button Name="btn_save" Grid.Row="1" Grid.Column="0" Height="25" Content="保存" Click="BtnSaveClick" Margin="10 2"/>
        <Button Name="btn_exit" Grid.Row="1" Grid.Column="1" Height="25" Content="关闭" Click="BtnExitClick" Margin="10 2"/>
    </Grid>
</Window>
